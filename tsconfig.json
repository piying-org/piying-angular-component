/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "paths": {
      "@piying-lib/angular-daisyui/pipe": [
        "./projects/daisyui/pipe"
      ],
      "@piying-lib/angular-daisyui/service": [
        "./projects/daisyui/service"
      ],
      "@piying-lib/angular-daisyui/field-control": [
        "./projects/daisyui/field-control"
      ],
      "@piying-lib/angular-daisyui/field-group": [
        "./projects/daisyui/field-group"
      ],
      "@piying-lib/angular-daisyui/non-field-control": [
        "./projects/daisyui/non-field-control"
      ],
      "@piying-lib/angular-daisyui/wrapper": [
        "./projects/daisyui/wrapper"
      ],
      "@piying-lib/angular-daisyui/extension": [
        "./projects/daisyui/extension"
      ],
      "@piying-lib/angular-daisyui/directive": [
        "./projects/daisyui/directive"
      ],
      "@piying-lib/angular-core": [
        "./projects/core"
      ],
    },
    "strict": true,
    "noImplicitOverride": true,
    "noPropertyAccessFromIndexSignature": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2024",
    "module": "preserve"
  },
  "angularCompilerOptions": {
    "enableI18nLegacyMessageIdFormat": false,
    "strictInjectionParameters": true,
    "strictInputAccessModifiers": true,
    "typeCheckHostBindings": true,
    "strictTemplates": true
  },
  "files": [],
  "references": [
    {
      "path": "./tsconfig.app.json"
    },
    {
      "path": "./tsconfig.spec.json"
    },
    {
      "path": "./projects/daisyui/tsconfig.lib.json"
    },
    {
      "path": "./projects/daisyui/tsconfig.spec.json"
    }
  ]
}