{
  "name": "piying-angular-component",
  "version": "1.0.20",
  "scripts": {
    "ng": "ng",
    "start": "ng serve --port 4444",
    "build": "ng build core && ng build daisyui",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "serve:ssr:piying-angular-component": "node dist/piying-angular-component/server/server.mjs",
    "test:ci": "ng test daisyui -c ci",
    "lint": "eslint --fix ./src  && prettier ./src --write && eslint --fix ./projects  && prettier ./projects --write",
    "publish-only": "tsx ./script/change-version.ts && tsx ./script/publish.ts"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "dependencies": {
    "@angular/cdk": "^20.2.10",
    "@angular/common": "^20.3.0",
    "@angular/compiler": "^20.3.0",
    "@angular/core": "^20.3.0",
    "@angular/forms": "^20.3.0",
    "@angular/material": "^20.2.10",
    "@angular/platform-browser": "^20.3.0",
    "@angular/platform-server": "^20.3.0",
    "@angular/router": "^20.3.0",
    "@angular/ssr": "^20.3.8",
    "@cyia/ngx-common": "^20.0.3",
    "@faker-js/faker": "^10.1.0",
    "@piying/view-angular": "2.3.1",
    "@tailwindcss/postcss": "^4.1.16",
    "cally": "^0.8.0",
    "clsx": "^2.1.1",
    "es-toolkit": "^1.41.0",
    "express": "^5.1.0",
    "postcss": "^8.5.6",
    "rxjs": "~7.8.0",
    "tailwindcss": "^4.1.16",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@angular/build": "^20.3.8",
    "@angular/cli": "^20.3.8",
    "@angular/compiler-cli": "^20.3.0",
    "@eslint/js": "^9.39.2",
    "@types/express": "^5.0.1",
    "@types/jasmine": "~5.1.0",
    "@types/node": "^20.19.24",
    "daisyui": "^5.5.14",
    "eslint-plugin-unused-imports": "^4.3.0",
    "execa": "^9.6.1",
    "fast-glob": "^3.3.3",
    "gray-matter": "^4.0.3",
    "jasmine-core": "~5.9.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "material-icons": "^1.13.14",
    "ng-packagr": "^20.3.0",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "~5.9.2",
    "typescript-eslint": "^8.51.0"
  }
}